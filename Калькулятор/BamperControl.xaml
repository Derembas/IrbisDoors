<UserControl x:Class="Калькулятор.BamperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Калькулятор"
             mc:Ignorable="d" Width="auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Column="1"
                  Style="{StaticResource ComboProp}"
                  IsEnabled="{Binding Path=Nalich}"
                  ItemsSource="{Binding Path=AllMaterials}"
                  SelectedValue="{Binding Path=MaterialName}"/>
        <TextBlock Style="{StaticResource CellIntro}" Text="Материал:"/>
        <TextBox Grid.Column="1" Grid.Row="1" 
                 Style="{StaticResource TBoxProp}"
                 Text="{Binding Path=Height}"
                   IsEnabled="{Binding Path=Nalich}"/>
        <TextBlock Grid.Row="1" Style="{StaticResource CellIntro}" Text="Высота:"/>
    </Grid>
</UserControl>
